@{ ViewBag.Title = "Inicio de Sesión"; }


   
    <div class="form-horizontal portada" style="background: url(@ViewBag.Imagen) no-repeat fixed center;">
        <center>
            <div class="DivCenter">
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="field">
                            <input id="uxu" class="form-control input-sm" placeholder="Juan.perez" maxlength="100">
                            <label for="uxu">Usuario</label>
                        </div>
                        <span class="AlertaDanger" id="uxuVal"></span>
                    </div>
                    <div class="col-md-12">
                        <div class="field">
                            <input id="c0m" class="form-control input-sm" type="password" placeholder="******" maxlength="100">
                            <label for="c0m">Contraseña</label>
                        </div>
                        <span class="AlertaDanger" id="c0mVal"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <button id="inisec" type="button" class="btn btn-primary btn-sm ">
                            <span class="glyphicon glyphicon-log-in"></span> Entrar
                        </button>
                    </div>
                </div>
            </div>

</center>
    </div>

<script>
    $(document).ready(function () {
        $("#uxu").keyup(function () {
            $("#uxuVal").html('');
        });

        $("#c0m").keyup(function () {
            $("#c0mVal").html('');
        });


        ///////////////////////////////////////////////////////////////
        $("#inisec").click(function () {
            var uxu = $("#uxu").val();
            var c0m = $("#c0m").val();

            ///////////////////////////////////////////////////////////
            if ($("#uxu").val().length === 0) {
                $("#uxuVal").html('');
                $("#uxuVal").append('Indique su Usuario');
            }

            if ($("#uxu").val().length > 100) {
                $("#uxuVal").html('');
                $("#uxuVal").append('Maximo 100 caracteres');
            }

            if ($("#c0m").val().length === 0) {
                $("#c0mVal").html('');
                $("#c0mVal").append('Indique su Contraseña');
            }

            if ($("#c0m").val().length > 100) {
                $("#c0mVal").html('');
                $("#c0mVal").append('Maximo 100 caracteres');
            }

            //Primero Valida que los campos que siempre van a ser obligatorios//
            if ($("#uxu").val().length != 0 && $("#uxu").val().length <= 100 &&
                $("#c0m").val().length != 0 && $("#c0m").val().length <= 100 ) {


                //inserta sin validar la fecha de egreso//
                $.ajax({
                    url: '@Url.Action("Iniciar", "Home")',
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: JSON.stringify({
                        "uxu": uxu,
                        "c0m": c0m,
                    }),
                    success: function (data) {
                        if (data.Result == true) {
                            window.location = '@Url.Action("Estandar", "Home")';
                        }
                        else {
                            $("#ErrorMSG").html('');
                            $("#ErrorMSG").append(data.Mensaje);
                            $('#ConfirmModal').modal('hide');
                            $('#ModalErrorMSG').modal('show')
                        }
                    },
                    error: function () {
                        console.log("No pudo acceder al Metodo");
                    }
                });
            }
            else {
                console.log("No se cumplio la validación de datos");
            }
        });
    });

</script>