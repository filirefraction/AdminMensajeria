    <div id="ContentGral" class="container body-content" style="margin-top: 30px;margin-bottom: 50px;">
        @RenderBody()
        <div class="modal fade" id="ModalErrorMSG" name="ModalErrorMSG" role="dialog">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-body alert alert-danger">
                    <div>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div id="ErrorMSG" style="word-wrap: break-word;">
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="ModalCorrectoMSG" name="ModalCorrectoMSG" role="dialog">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-body alert alert-success">
                    <div>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div id="CorrectoMSG" style="word-wrap: break-word;">
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="ConfirmModal" name="ConfirmModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="ConfirmTitle"></h4>
                    </div>
                    <div class="modal-footer" id="ConfirmBody">

                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="OperModal" tabindex="-1" role="dialog" aria-labelledby="OperModal" aria-hidden="true">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="OperTitle"></h4>
                    </div>
                    <div class="modal-body">
                        <div id="OperBody">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="loadMe" tabindex="-1" role="dialog" aria-labelledby="loadMeLabel">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <div class="loader"> <img src="~/Image/spingreen.gif" /></div>
                        <div clas="loader-txt">
                            <p>Por Favor Espere...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function LoadShow() {
                $("#loadMe").modal({
                    backdrop: "static", //remove ability to close modal with click
                    keyboard: false, //remove option to close with keyboard
                    show: true //Display loader!
                });
            }

            function LoadHide() {
                $("#loadMe").modal("hide");
            }
        </script>
    </div>

    @if (Session["IdUsuario"] != null)
    {
        <div id="footer" class="navbar navbar-default navbar-fixed-bottom">
